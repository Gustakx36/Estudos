<body>
    <div id="all">
        <h1>Somando Números</h1>
        <input type="number" name="txtn1" id="txtn1"> + 
        <input type="number" name="txtn2" id="txtn2">
        <input type="button" value="somar">
        <div id="res"><br>Resultado</div>
    </div>
    <script>
            function somar() {
            var txtn1 = window.document.getElementById('txtn1')
            var txtn2 = window.document.getElementById('txtn2')
            var res = window.document.getElementById('res')
            var n1 = Number(tn1.value)
            var n2 = Number(tn2.value)
            var s = n1 + n2
            res.innerHTML = `A soma dos números ${n1} e ${n2} resulta em ${s}`
        }
    </script>
